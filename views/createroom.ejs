<head>
    <script src="jquery/dist/jquery.min.js"></script>

    <script src="scripts/mechanics/Base.js"></script>
    <script src="scripts/mechanics/entities.js"></script>

    <script src="scripts/rooms/tile.js"></script>
    <script src="scripts/rooms/undoredo.js"></script>
    <script src="scripts/rooms/room.js"></script>
    <script src="scripts/rooms/createroom.js"></script>

    <script src="scripts/sprites/sprite.js"></script>
    <script src="scripts/sprites/spritesheet.js"></script>
    <script src="scripts/sprites/spritesheetloader.js"></script>

    <link href="styles/multiple-select.css" rel="stylesheet" />
    <link href="styles/createroom.css" rel="stylesheet" />
</head>

<body>
    <div style="display: flex; flex-direction: column; justify-content: flex-start; margin-right: 5px;">
        <div style="display: flex; justify-content: flex-start;">
            <a href="/">Back</a>
            <h1 style="margin: 0;">Room Creator</h1>
        </div>
        <div style="display: flex; justify-content: space-between;">
            <span>ID:</span>
            <input type="text" placeholder="Room Name">
        </div>
        <div style="display: flex; justify-content: space-between;">
            Layer:
            <button id="layer1" onclick="selectLayer(0)">1</button>
            <button id="layer2" onclick="selectLayer(1)">2</button>
            <div title="Layers 1 & 2 will appear below the player, layers 3 & 4 will appear above the player" style="background: url(/resources/sprites/characters/roguelikeChar_transparent.png) 0px 0px no-repeat;
                width: 16px;
                height: 16px;"></div>
            <button id="layer3" onclick="selectLayer(2)">3</button>
            <button id="layer4" onclick="selectLayer(3)">4</button>
            <button id="layerpreview" onclick="selectLayer('preview')">Preview</button>
        </div>
        <div style="display: flex; justify-content: space-between;">
            Selected:
            <canvas id="selectedtile" style="width: 16px; height: 16px; border: solid black 1px;" width="16" height="16"></canvas>
            <canvas id="selectedtile2" style="width: 16px; height: 16px; border: solid black 1px;" width="16" height="16"></canvas>
            Properties:
            <select id="tiletypes">
                <option value="">Permeable</option>
                <option value="">Solid</option>
            </select>
            <script src="scripts/rooms/multiple-select.js"></script>
            <script>
                $('#tiletypes').multipleSelect({
                    selectAll: false
                });
            </script>
        </div>
        <canvas id="roomcanvas" width="256" height="256"></canvas>
        <div style="display: flex; justify-content: space-around;">
            <button id="undobtn">↶</button>
            <button id="redobtn">↷</button>
            <input style="width: 60%; text-align: center;" type="text" placeholder="north type">
            <button id="fetchbtn" title="select a tile from the room view">Fetch</button>
        </div>
        <div style="display: flex; justify-content: space-around;">
            <input style="width: 50%; text-align: center;" type="text" placeholder="west type">
            <input style="width: 50%; text-align: center;" type="text" placeholder="east type">
        </div>
        <div style="display: flex; justify-content: space-around;">
            <button id="clearbtn">Clear</button>
            <input style="width: 60%; text-align: center;" type="text" placeholder="south type">
            <button id="fillbtn">Fill</button>
        </div>

        <div style="display: flex; justify-content: space-around;">
            <button>Delete</button>
            <button>Load</button>
            <button>Save</button>
            <button>Add</button>
        </div>
        <select multiple="multiple" style="flex: 1; overflow-y: scroll; border: solid black 1px;">
        </select>
    </div>
    <div id="tilepickercontainer" style="overflow: auto; width: 100%; height: 99%; border: solid black 1px;">
        <canvas id="tilepicker"></canvas>
    </div>
</body>